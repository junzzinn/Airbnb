<style>
  .btn-custom {
    background-color: #ff5a5f;
    border-color: #ff5a5f;
    width: 100%
  }

  .btn-custom:hover {
    background-color: #e2464a;
    border-color: #e2464a;
  }
</style>
<div class="container">
  <div class="shadow border m-4 w-50 mx-auto p-4" style="max-width: 400px; border-radius: 10px">
    <h2 class="mb-4">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <div class="mb-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
      </div>
      <div class="mb-3">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
      </div>
      <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper_class: "mb-3" if devise_mapping.rememberable? %>

      <div class="text-center mb-3">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-custom", style: "" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
