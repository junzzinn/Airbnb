<%= render partial: 'shared/navbar' %>
<div class="container mt-3">
  <%= link_to "Back to bookings", bookings_path %>
  <h4><strong><%= @booking.residence.title %></strong></h4>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @booking.residence.image, alt: "Residence Image", class: "image-booking-page" %>
    </div>
    <div class="col-md-6">
      <div class="py-3 ">
        <div class="pb-3 ">
          <h4><strong><%= @booking.residence.category %>: <%= @booking.residence.address %></strong></h4>
          <%= button_to @booking, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-times"></i>
          <% end %>
          <span><%= @booking.residence.user.first_name %> <%= @booking.residence.user.last_name %></span>
        </div>
        <div class="border-top pt-3">
          <span><%= @booking.residence.description %></span>
        </div>
      </div>
      <div class="shadow border p-3 row" style="border-radius: 12px;" data-controller="booking">
        <div class="col-md-6">
          <p>
            <strong>Total price:</strong>
            <%= number_to_currency(@booking.total_price) %>
          </p>

          <p>
            <strong>Start date:</strong>
            <%= @booking.start_date %>
          </p>
        </div>
        <div class="col-md-6">
          <p>
            <strong>Status:</strong>
            <%= @booking.status %>
          </p>

          <p>
            <strong>End date:</strong>
            <%= @booking.end_date %>
          </p>
        </div>
        <div class="row">
          <%= link_to "Edit this booking", edit_booking_path(@booking) %>
        </div>
      </div>
    </div>
  </div>
</div>
