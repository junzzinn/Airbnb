<style>
  .btn-custom {
    background-color: #ff5a5f;
    border-color: #ff5a5f;
    width: 100%
  }

  .btn-custom:hover {
    background-color: #e2464a;
    border-color: #e2464a;
  }
</style>
<%= simple_form_for(@residence) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :image %>
    <%= f.input :address %>
    <%= f.input :price_per_night %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-custom" %>
  </div>
<% end %>
